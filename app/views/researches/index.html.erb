<h1>Pesquisas</h1>

<table>
  <thead>
    <tr>
      <th>Nº Registro</th>
      <th>Prontuário</th>
      <th>Nome</th>
      <th>Sexo</th>
      <th>Peso</th>
      <th>Altura</th>
      <th>Cor</th>
      <th>Unit</th>
      <th>Leito</th>
      <th>Data de Admissão</th>
      <th>Hospital</th>
      <th>Ram</th>
      <th>Medicamentos</th>

      <th>Consumo de Etilismo</th>
      <th>Tempo de Etilismo</th>

      <th>Consumo de Tabagismo</th>
      <th>Tempo de Tabagismo</th>

      <th>Gravidade</th>
      <th>Plantas Medicinais</th>
      <th>Reacães Adversas</th>
      <th>Sequelas</th>

      <th>Tratamento</th>
      <th>Exposiço Previa</th>
      <th>Desenvolveu Reação</th>
      <th>Usa Cocaina</th>
      <th>Usa Crack</th>
      <th>Usa LSD</th>
      <th>Usa Maconha</th>
      <th>Outro local</th>

      <th>Algoritmo Naranjo</th>
      <th>Algoritmo OMS</th>
      <th>Algoritmo RUCAM</th>
      <th>Algoritmo UE</th>
    </tr>
  </thead>

  <tbody>
    <% @researches.each do |research| %>
      <tr>
        <td><%= research.id %></td>
        <td><%= research.handbook %></td>
        <td><%= research.name %></td>
        <td><%= research.sex %></td>
        <td><%= research.weight %></td>
        <td><%= research.height %></td>
        <td><%= research.color %></td>
        <td><%= research.unit %></td>
        <td><%= research.bed %></td>
        <td><%= l research.admission %></td>
        <td><%= research.hospital.name %></td>
        <td>
          <table>
            <thead>
              <th>Causa</th>
              <th>Comobidade</th>
              <th>Outras cousas</th>
              <th>Inicio</th>
              <th>Fim</th>
              <th>Suspeitos</th>
            </thead>
            <tbody>
              <tr>
                <td><%= research.ram.cause %></td>
                <td><%= research.ram.comorbidity %></td>
                <td><%= research.ram.otherCauses %></td>
                <td><%= l research.ram.start  %></td>
                <td><%= l research.ram.end %></td>
                <td>
                  <table>
                    <thead>
                      <th>Nome</th>
                      <th>Via</th>
                      <th>Dose</th>
                      <th>Indicações</th>
                      <th>Inicio</th>
                      <th>Fim</th>
                    </thead>
                    <tbody>
                      <% research.ram.suspects.each do |medication| %>
                      <tr>
                        <td><%= medication.name %></td>
                        <td><%= medication.way %></td>
                        <td><%= medication.dose %></td>
                        <td><%= medication.indication %></td>
                        <td><%= l medication.start %></td>
                        <td><%= l medication.end %></td>
                      </tr>
                      <% end %>
                    </tbody>
                  </table>
                </td>
            </tbody>
          </table>
        </td>
        <td>
          <table>
            <thead>
              <th>Nome</th>
              <th>Via</th>
              <th>Dose</th>
              <th>Indicações</th>
              <th>Inicio</th>
              <th>Fim</th>
            </thead>
            <tbody>
              <% research.medications.each do |medication| %>
              <tr>
                <td><%= medication.name %></td>
                <td><%= medication.way %></td>
                <td><%= medication.dose %></td>
                <td><%= medication.indication %></td>
                <td><%= l medication.start unless medication.start.nil? %></td>
                <td><%= l medication.end unless medication.end.nil? %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </td>

        <td><%= research.etilismo %></td>
        <td><%= research.tempoEtilismo %></td>

        <td><%= research.tabagismo %></td>
        <td><%= research.tempoTabagismo %></td>

        <td><%= research.gravity %></td>
        <td><%= research.plantasMedicinais %></td>
        <td><%= research.reacoesAdversas %></td>
        <td><%= research.sequels %></td>

        <td><%= research.treatment %></td>
        <td><%= research.exposicaoPrevia %></td>
        <td><%= research.desenvolveuReacao %></td>
        <td><%= research.usaCocaina %></td>
        <td><%= research.usaCrack %></td>
        <td><%= research.usaLSD %></td>
        <td><%= research.usaMaconha %></td>
        <td><%= research.anotherLocation %></td>

        <td><%= research.algNaranjo %></td>
        <td><%= research.algOMS %></td>
        <td><%= research.algRUCAM %></td>
        <td><%= research.algUE %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Excel Research', action: :excel, format: :xls %>

